{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es2022": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "ignorePatterns": [
    "out",
    "dist"
  ]
}
